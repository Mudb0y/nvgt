void main() {
	audio_engine e(AUDIO_ENGINE_NO_DEVICE, 48000, 2);
	sound_default_engine.set_gain(10);
	e.attach_output_bus(0, sound_default_engine.endpoint, 0);
	microphone mic(engine = e);
	sound@ output = e.sound();
	output.open(mic);
	output.play();
	show_window("test");
	while (!key_pressed(KEY_ESCAPE)) wait(5);
}
